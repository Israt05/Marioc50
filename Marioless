#include <cs50.h>
#include <stdio.h>

int main(void)
{
     int i,j,n;
     while(1)
     {
        printf("Height: ");
        scanf("%d",&n);
        if(n<1 || n>8)
        {
            continue;
        }
        for(i=1;i<=n;i++)
        {
            for(j=i+1;j<=n;j++)
            {
                printf(" ");
            }
            for(j=1;j<=i;j++)
            {
                printf("#");
            }

            printf("\n");
        }
        break;

     }

}











